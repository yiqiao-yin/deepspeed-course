{
    "train_batch_size": 128,
    "train_micro_batch_size_per_gpu": 16,
    "gradient_accumulation_steps": 8,
    
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 0.001,
            "betas": [0.9, 0.999],
            "eps": 1e-8,
            "weight_decay": 0.01
        }
    },
    
    "scheduler": {
        "type": "WarmupCosineLR",
        "params": {
            "warmup_min_lr": 0.0,
            "warmup_max_lr": 0.001,
            "warmup_num_steps": 100,
            "cos_min_lr": 1e-5
        }
    },
    
    "fp16": {
        "enabled": false
    },
    
    "bf16": {
        "enabled": true
    },
    
    "zero_optimization": {
        "stage": 2,
        "allgather_partitions": true,
        "allgather_bucket_size": 2e8,
        "overlap_comm": true,
        "reduce_scatter": true,
        "reduce_bucket_size": 2e8,
        "contiguous_gradients": true,
        "cpu_offload": false
    },
    
    "gradient_clipping": 1.0,
    
    "steps_per_print": 50,
    "wall_clock_breakdown": false,
    
    "data_efficiency": {
        "enabled": true,
        "seed": 1234,
        "data_sampling": {
            "enabled": false
        }
    },
    
    "communication_data_type": "fp32",
    "prescale_gradients": false,
    "sparse_gradients": false,
    
    "tensorboard": {
        "enabled": true,
        "output_path": "./logs/",
        "job_name": "rnn_timeseries_training"
    }
}